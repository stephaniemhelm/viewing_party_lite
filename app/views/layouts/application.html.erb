<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

      <p><%= link_to "Home", "/" %></p>
      <% flash.each do |name, msg| %>
      <div class="alert alert-warning">
        <strong><%= content_tag :div, msg, class: name %></strong>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
